{
    "name": "rbac",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "scripts": {
        "build-bun": "bun build ./src/main.ts --compile --outfile ./bin/rbac",
        "build": "nest build",
        "fmt": "prettier --write \"src/**/*.ts\" \"migrations/*.ts\"",
        "start": "bun run src/main.ts",
        "start:dev": "bun --watch src/main.ts",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "bun test src",
        "test:watch": "bun test --watch",
        "test:cov": "bun test --coverage",
        "migrate:create": "read -p 'Enter table description (e.g create-user-table)' desc; bun run typeorm -- migration:create ./migrations/$desc",
        "migrate:up": "bun run typeorm migration:run -d ./typeorm.config.ts",
        "migrate:down": "bun run typeorm migration:revert -d ./typeorm.config.ts",
        "typeorm": "typeorm-ts-node-commonjs"
    },
    "dependencies": {
        "@nestjs/common": "^10.4.5",
        "@nestjs/config": "^3.2.3",
        "@nestjs/core": "^10.4.5",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/swagger": "^7.4.2",
        "@nestjs/typeorm": "^10.0.2",
        "dotenv": "^16.4.5",
        "eslint-plugin-jsdoc": "^50.4.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-sonarjs": "^2.0.3",
        "nestjs-pino": "^4.1.0",
        "pg": "^8.4.0",
        "pino": "^9.5.0",
        "pino-http": "^10.3.0",
        "postgres": "^3.4.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.4.5",
        "@types/bun": "^1.1.11",
        "@types/express": "^5.0.0",
        "@types/node": "^16.11.10",
        "@types/supertest": "^6.0.0",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-loader": "^9.4.3",
        "ts-node": "10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3"
    }
}